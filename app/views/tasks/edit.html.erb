<h1>Edit Task</h1>

<%= form_for(@task) do |f| %>
  
  <div class="form-group" method="post">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', value: @task.title %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: 'form-control', value: @task.details %>
    </div>
    
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed, {}, true, false %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>

<% end %>